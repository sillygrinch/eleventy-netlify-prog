<section>
	{% for projects in projectslist | reverse %}
		<article{% if projects.url == url %} data-current="current item"{% endif %}>
			<h3>
				<a href="{{ projects.url | url }}">
					{% if projects.data.title %}
						{{ projects.data.title }}
					{% else %}
						Untitled
					{% endif %}
				</a>
			</h3>
			{% if projects.data.summary %}
				<p>
					{{ projects.data.summary }}
				</p>
			{% endif %}
			<p>
				<time datetime="{{ projects.date | machineDate }}">
					<small>{{ projects.date | readableDate }} by <a href="/authors/{{ projects.data.author | slug }}/">{{ projects.data.author }}</a></small>
				</time>
			</p>
			{% if projects.data.tags %}
				<p>
					{% for tag in projects.data.tags %}
		  			{%- if tag != "projects" -%}
		  				{% set tagUrl %}/tags/{{ tag }}/{% endset %}
		  			<a href="{{ tagUrl | url }}" rel="tag">{{ tag }}</a>
		  			{%- endif -%}
					{% endfor %}
				</p>
			{% endif %}
		</article>
	{% endfor %}
</section>
